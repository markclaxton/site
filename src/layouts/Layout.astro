---
interface Props {
  title: string
}

const { title } = Astro.props
import Styles from '../assets/styles/Styles.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RW5VCV2Y47"></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'G-RW5VCV2Y47')
    </script>
    <meta charset="UTF-8" />
    <meta name="author" content="Mark Claxton" />
    <meta name="description" content="Lead designer and developer at Herd, specialising in building and maintaining custom Shopify themes." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Styles />
  </head>
  <body>
    <slot />
  </body>
</html>
