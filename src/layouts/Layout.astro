---
interface Props {
  title: string
}

const { title } = Astro.props
const pathname = Astro.url.pathname
import Styles from '../assets/styles/Styles.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="Mark Claxton" />
    <meta name="description" content="Lead designer and developer at Herd, specialising in building and maintaining custom Shopify themes." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Styles />
  </head>
  <body>
    <slot />
  </body>
</html>
